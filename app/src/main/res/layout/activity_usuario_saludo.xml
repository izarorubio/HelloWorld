<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioSaludoActivity">

    <TextView android:id="@+id/saludo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#6941BF"
        android:textStyle="bold"
        android:text="Hola "/>

    <ImageView
        android:id="@+id/flower_image_view"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        app:layout_constraintTop_toBottomOf="@id/saludo_text"
        android:scaleType="centerCrop"
        android:src="@drawable/imageflower"/>

</androidx.constraintlayout.widget.ConstraintLayout>