<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioActivity">

    <TextView
        android:id="@+id/writeName_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="12sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#6941BF"
        android:text="@string/writeName_text"/>

    <EditText
        android:id="@+id/writeName_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/writeName_text"
        android:layout_marginTop= "20sp"
        android:inputType="textMultiLine"
        android:hint="@string/writeName_name_hint"/>

    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/writeName_editText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30sp"
        android:backgroundTint="#77A632"
        android:text="@string/done_buttom_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>